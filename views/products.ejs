<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/adminProducts.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/scripts/adminProducts.js" defer></script>
  </head>

  <body>
    <div class="container">
      <aside><%- include("partial/nav-barAdmin.ejs") %></aside>
      <section class="main">
        <div class="table-container">
          <h2>Products</h2>
          <button id="addProductBtn">Add Product</button>
          <table>
            <thead>
              <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Difficulty</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="productTableBody">
              <% if (meals && meals.length > 0) { %> <% meals.forEach(meal => {
              %>
              <tr data-id="<%= meal._id %>">
                <td><img src="<%= meal.image %>" alt="<%= meal.name %>" /></td>
                <td><%= meal.name %></td>
                <td><%= meal.description %></td>
                <td><%= meal.cookTime %> min</td>
                <td><%= meal.difficulty %></td>
                <td>
                  <button
                    class="edit-button"
                    onclick="openEditModal(
                  '<%= meal._id %>', 
                  '<%= meal.name %>', 
                  '<%= meal.image %>', 
                  '<%= meal.cookTime %>', 
                  '<%= meal.difficulty %>', 
                  '<%= meal.description %>', 
                  '<%= meal.tags %>', 
                  '<%= meal.preferences %>', 
                  '<%= meal.ingredientsName %>', 
                  '<%= meal.ingPer2 %>', 
                  '<%= meal.ingPer4 %>', 
                  '<%= meal.instructions %>', 
                  '<%= meal.allergens %>', 
                  '<%= meal.utensils %>', 
                  '<%= meal.nutrition.energy %>', 
                  '<%= meal.nutrition.calories %>', 
                  '<%= meal.nutrition.fat %>', 
                  '<%= meal.nutrition.satFat %>', 
                  '<%= meal.nutrition.carbohydrates %>', 
                  '<%= meal.nutrition.sugar %>', 
                  '<%= meal.nutrition.fiber %>', 
                  '<%= meal.nutrition.protein %>', 
                  '<%= meal.nutrition.cholesterol %>', 
                  '<%= meal.nutrition.sodium %>', 
                  '<%= meal.recommendations %>'
                )"
                  >
                    <i class="fas fa-pen"></i>
                  </button>
                  <form
                    action="/products/delete/<%= meal._id %>"
                    method="POST"
                    style="display: inline"
                  >
                    <button type="submit" class="delete-button">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="6">No meals found</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>
    </div>

    <!-- Modal for Adding Product -->
    <div id="addProductModal" class="modal">
      <div class="modal-content">
        <span class="close-btn" onclick="closeModal('addProductModal')"
          >&times;</span
        >
        <h2>Add Product</h2>
        <form id="addProductForm" action="/products/add" method="POST">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required />

          <label for="image">Image URL:</label>
          <input type="text" id="image" name="image" required />

          <label for="cookTime">Cook Time (in minutes):</label>
          <input type="number" id="cookTime" name="cookTime" required />

          <label for="difficulty">Difficulty:</label>
          <select id="difficulty" name="difficulty" required>
            <option value="Easy">Easy</option>
            <option value="Medium">Medium</option>
            <option value="Hard">Hard</option>
          </select>

          <label for="description">Description:</label>
          <textarea id="description" name="description" required></textarea>

          <label for="tags">Cuisine:</label>
          <input type="text" id="tags" name="tags" required />

          <label for="preferences">Preferences:</label>
          <input type="text" id="preferences" name="preferences" required />

          <label for="ingredientsName">Ingredients Name:</label>
          <input
            type="text"
            id="ingredientsName"
            name="ingredientsName"
            required
          />

          <label for="ingPer2">Ingredients Per 2 Servings:</label>
          <input type="text" id="ingPer2" name="ingPer2" required />

          <label for="ingPer4">Ingredients Per 4 Servings:</label>
          <input type="text" id="ingPer4" name="ingPer4" required />

          <label for="instructions">Instructions:</label>
          <input type="text" id="instructions" name="instructions" required />

          <label for="allergens">Allergens:</label>
          <input type="text" id="allergens" name="allergens" required />

          <label for="utensils">Utensils:</label>
          <input type="text" id="utensils" name="utensils" required />

          <label for="nutrition_energy">Energy:</label>
          <input
            type="number"
            id="nutrition_energy"
            name="nutrition[energy]"
            required
          />

          <label for="nutrition_calories">Calories:</label>
          <input
            type="number"
            id="nutrition_calories"
            name="nutrition[calories]"
            required
          />

          <label for="nutrition_fat">Fat:</label>
          <input
            type="number"
            id="nutrition_fat"
            name="nutrition[fat]"
            required
          />

          <label for="nutrition_satFat">Saturated Fat:</label>
          <input
            type="number"
            id="nutrition_satFat"
            name="nutrition[satFat]"
            required
          />

          <label for="nutrition_carbohydrates">Carbohydrates:</label>
          <input
            type="number"
            id="nutrition_carbohydrates"
            name="nutrition[carbohydrates]"
            required
          />

          <label for="nutrition_sugar">Sugar:</label>
          <input
            type="number"
            id="nutrition_sugar"
            name="nutrition[sugar]"
            required
          />

          <label for="nutrition_fiber">Fiber:</label>
          <input
            type="number"
            id="nutrition_fiber"
            name="nutrition[fiber]"
            required
          />

          <label for="nutrition_protein">Protein:</label>
          <input
            type="number"
            id="nutrition_protein"
            name="nutrition[protein]"
            required
          />

          <label for="nutrition_cholesterol">Cholesterol:</label>
          <input
            type="number"
            id="nutrition_cholesterol"
            name="nutrition[cholesterol]"
            required
          />

          <label for="nutrition_sodium">Sodium:</label>
          <input
            type="number"
            id="nutrition_sodium"
            name="nutrition[sodium]"
            required
          />

          <label for="recommendations">Recommendations:</label>
          <input
            type="text"
            id="recommendations"
            name="recommendations"
            required
          />

          <button type="submit">Add Meal</button>
        </form>
      </div>
    </div>

    <!-- Edit Product Modal -->

    <div id="editProductModal" class="modal">
      <div class="modal-content">
        <span class="close-btn" onclick="closeModal('editProductModal')"
          >&times;</span
        >
        <h2>Edit Meal</h2>
        <form id="editProductForm" method="POST" action="/products/edit">
          <input type="hidden" name="_id" id="edit-id" />
          <input
            type="text"
            name="name"
            id="edit-name"
            placeholder="Meal Name"
            required
          />
          <input
            type="text"
            name="image"
            id="edit-image"
            placeholder="Image URL"
            required
          />
          <input
            type="number"
            name="cookTime"
            id="edit-cookTime"
            placeholder="Cook Time (min)"
            required
          />
          <input
            type="text"
            name="difficulty"
            id="edit-difficulty"
            placeholder="Difficulty"
            required
          />
          <textarea
            name="description"
            id="edit-description"
            placeholder="Description"
            required
          ></textarea>
          <input type="text" name="tags" id="edit-tags" placeholder="Tags" />
          <input
            type="text"
            name="preferences"
            id="edit-preferences"
            placeholder="Preferences"
          />
          <input
            type="text"
            name="ingredientsName"
            id="edit-ingredientsName"
            placeholder="Ingredients Name"
          />
          <input
            type="text"
            name="ingPer2"
            id="edit-ingPer2"
            placeholder="Ingredients per 2"
          />
          <input
            type="text"
            name="ingPer4"
            id="edit-ingPer4"
            placeholder="Ingredients per 4"
          />
          <textarea
            name="instructions"
            id="edit-instructions"
            placeholder="Instructions"
            required
          ></textarea>
          <input
            type="text"
            name="allergens"
            id="edit-allergens"
            placeholder="Allergens"
          />
          <input
            type="text"
            name="utensils"
            id="edit-utensils"
            placeholder="Utensils"
          />
          <input
            type="number"
            name="nutrition[energy]"
            id="edit-nutrition-energy"
            placeholder="Energy (kcal)"
          />
          <input
            type="number"
            name="nutrition[calories]"
            id="edit-nutrition-calories"
            placeholder="Calories (kcal)"
          />
          <input
            type="number"
            name="nutrition[fat]"
            id="edit-nutrition-fat"
            placeholder="Fat (g)"
          />
          <input
            type="number"
            name="nutrition[satFat]"
            id="edit-nutrition-satFat"
            placeholder="Saturated Fat (g)"
          />
          <input
            type="number"
            name="nutrition[carbohydrates]"
            id="edit-nutrition-carbohydrates"
            placeholder="Carbohydrates (g)"
          />
          <input
            type="number"
            name="nutrition[sugar]"
            id="edit-nutrition-sugar"
            placeholder="Sugar (g)"
          />
          <input
            type="number"
            name="nutrition[fiber]"
            id="edit-nutrition-fiber"
            placeholder="Fiber (g)"
          />
          <input
            type="number"
            name="nutrition[protein]"
            id="edit-nutrition-protein"
            placeholder="Protein (g)"
          />
          <input
            type="number"
            name="nutrition[cholesterol]"
            id="edit-nutrition-cholesterol"
            placeholder="Cholesterol (mg)"
          />
          <input
            type="number"
            name="nutrition[sodium]"
            id="edit-nutrition-sodium"
            placeholder="Sodium (mg)"
          />

          <input
            type="text"
            name="recommendations"
            id="edit-recommendations"
            placeholder="Recommendations"
          />
          <button type="submit">Update Meal</button>
        </form>
      </div>
    </div>
  </body>
</html>
