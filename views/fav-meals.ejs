<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap"
            rel="stylesheet"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="../styles/fav-meals.css" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        />
        <title>Fresh Bites</title>
    </head>
    <body>
        <%- include("./partial/nav-bar.ejs") %>

        <h1>Favourite Meals</h1>
        <div class="main-content">
            <h1>My Favourites</h1>

            <% if (favoriteMeals.length > 0) { %> <%
            favoriteMeals.forEach(function(meal) { %>
            <div class="meal-item">
                <img src="<%= meal.image %>" alt="<%= meal.name %>" />
                <div class="meal-details">
                    <h3><%= meal.name %></h3>
                    <p><%= meal.description %></p>
                    <div class="info">
                        <span
                            ><i class="fas fa-users"></i> For <%=
                            meal.ingredientsName.length %> People</span
                        >
                        <span
                            ><i class="fas fa-fire"></i> <%=
                            meal.nutrition.calories %> Calories</span
                        >
                    </div>
                </div>
                <button
                    class="delete-button"
                    data-id="<%= meal._id %>"
                    onclick="confirmDeletion(this)"
                >
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <% }); %> <% } else { %>
            <p>No favorite meals found.</p>
            <% } %>
        </div>

        <div id="myModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Confirm Deletion</h2>
                </div>
                <p>Do you want to remove this meal from your favorite meals?</p>
                <div class="modal-footer">
                    <button class="confirm">Yes</button>
                    <button class="cancel">No</button>
                </div>
            </div>
        </div>

        <script src="../scripts/fav-meals.js"></script>
    </body>
</html>
